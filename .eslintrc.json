{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"env": {
		"node": true,
		"es2021": true
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"@typescript-eslint/no-non-null-assertion": "off"
	}
}